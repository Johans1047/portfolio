---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const shineText = t("about.title.line2");
---

<section
  id="about"
  aria-labelledby="hero-heading"
  class="min-h-screen py-10 md:py-14 lg:pt-13 font-mono"
>
  <!-- Header -->
  <div class="mb-7">
    <h1 class="text-5xl md:text-6xl font-bold mb-4">
      <span class="block text-white">{t("about.title.line1")}</span>
      <span class="gradient-shine">{t("about.title.line2")}</span>
    </h1>
  </div>

  <div class="flex flex-col gap-20">
    <!-- About Description -->
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="space-y-6">
        <h2 class="text-3xl font-bold text-white mb-4">
          {t("about.greeting")}
          <span class="gradient-text">Jonathan Salazar</span>
        </h2>

        <p class="xl:text-md text-gray-300 leading-relaxed">
          {t("about.intro.1")}
          <span class="text-purple-400 font-semibold">{t("about.intro.2")}</span
          >
          {t("about.intro.3")}
        </p>

        <p class="xl:text-md text-gray-300 leading-relaxed">
          {t("about.journey")}
        </p>

        <div class="space-y-5">
          <div class="flex items-center gap-3">
            <img
              width="28"
              height="28"
              src="/src/assets/svg/focus.svg"
              alt="focus-icon"
            />
            <span class="text-gray-300"
              >{t("about.focus.ux.1")}
              <span class="text-purple-400">{t("about.focus.ux.2")}</span>
              {t("about.focus.ux.3")}</span
            >
          </div>
          <div class="flex items-center gap-3">
            <img
              width="28"
              height="28"
              src="/src/assets/svg/cycle.svg"
              alt="cycle-icon"
            />
            <span class="text-gray-300"
              >{t("about.focus.learning.1")}
              <span class="text-purple-400">{t("about.focus.learning.2")}</span>
              {t("about.focus.learning.3")}</span
            >
          </div>
          <div class="flex items-center gap-3">
            <img
              width="28"
              height="28"
              src="/src/assets/svg/collaborate.svg"
              alt="collaborate-icon"
            />
            <span class="text-gray-300"
              >{t("about.focus.collaboration.1")}
              <span class="text-purple-400"
                >{t("about.focus.collaboration.2")}</span
              >
            </span>
          </div>
        </div>

        <div class="flex gap-4 pt-4">
          <a
            href="#portfolio"
            class="px-6 py-3 bg-linear-to-r from-purple-700 to-pink-700 rounded-lg font-semibold hover:scale-105 transition-transform duration-300"
          >
            {t("about.button.work")}
          </a>
          <a
            href="#contact"
            class="px-6 py-3 border border-purple-500 rounded-lg font-semibold hover:bg-purple-500/10 transition-all duration-300"
          >
            {t("about.button.contact")}
          </a>
        </div>
      </div>

      <div>
        <div
          class="relative aspect-square max-w-md mx-auto bg-linear-to-br from-gray-900 to-black rounded-3xl border border-purple-500/30 overflow-hidden"
        >
          <!-- Terminal header -->
          <div
            class="bg-gray-800 px-4 py-3 flex items-center gap-2 border-b border-gray-700"
          >
            <div class="w-3 h-3 rounded-full bg-red-500"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
            <span class="ml-4 text-gray-400 text-sm">terminal</span>
          </div>

          <!-- Terminal content -->
          <div class="p-6 font-mono text-sm space-y-3">
            <div class="code-line" style="animation-delay: 0s;">
              <span class="text-green-400">jonathan@dev</span>
              <span class="text-white">:</span>
              <span class="text-blue-400">~</span>
              <span class="text-white">$ npm run dev</span>
            </div>
            <div class="code-line" style="animation-delay: 0.5s;">
              <span class="text-gray-400">> {t("about.terminal.start")}</span>
            </div>
            <div class="code-line" style="animation-delay: 1s;">
              <span class="text-green-400">✓ {t("about.terminal.ready")}</span>
            </div>
            <div class="code-line" style="animation-delay: 1.5s;">
              <span class="text-purple-400"
                >✓ {t("about.terminal.building")}</span
              >
            </div>
            <div class="code-line" style="animation-delay: 2s;">
              <span class="text-pink-400"
                >✓ {t("about.terminal.collaborate")}</span
              >
            </div>

            <div class="mt-8 code-line caret" style="animation-delay: 2.5s;">
              <span class="text-white">▊</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Stats -->
    <div
      class="grid grid-cols-1 place-items-center xl:grid-cols-3 gap-20 xl:gap-40"
    >
      <div
        class="relative flex items-end justify-start h-48 rounded-2xl overflow-visible"
      >
        <div
          class="stat-card h-40 w-40 rounded-2xl rotate-[-27deg] absolute top-8 left-6 flex items-center justify-center shadow-2xl"
        >
          <div class="rotate-27 text-center">
            <div class="text-5xl font-bold stat-number mb-1 float-animation">
              2+
            </div>
          </div>
        </div>
        <div class="pl-55 pb-6 w-full">
          <h3 class="text-xl font-bold text-white mb-1">
            {t("about.stats.years")}
          </h3>
          <p class="text-purple-300 text-sm">{t("about.stats.experience")}</p>
        </div>
      </div>

      <div
        class="relative flex items-end justify-start h-48 rounded-2xl overflow-visible"
      >
        <div
          class="stat-card h-40 w-40 rounded-2xl rotate-[-27deg] absolute top-8 left-6 flex items-center justify-center shadow-2xl"
          style="animation-delay: 0.1s"
        >
          <div class="rotate-27 text-center">
            <div class="text-5xl font-bold stat-number mb-1 float-animation">
              4+
            </div>
          </div>
        </div>
        <div class="pl-55 pb-6 w-full">
          <h3 class="text-xl font-bold text-white mb-1">
            {t("about.stats.projects")}
          </h3>
          <p class="text-purple-300 text-sm">{t("about.stats.completed")}</p>
        </div>
      </div>

      <div
        class="relative flex items-end justify-start h-48 rounded-2xl overflow-visible"
      >
        <div
          class="stat-card h-40 w-40 rounded-2xl rotate-[-27deg] absolute top-8 left-6 flex items-center justify-center shadow-2xl"
        >
          <div class="rotate-27 text-center">
            <div class="text-5xl font-bold stat-number mb-1 float-animation">
              133+
            </div>
          </div>
        </div>
        <div class="pl-55 pb-6 w-full">
          <h3 class="text-xl font-bold text-white mb-1">
            {t("about.stats.commits")}
          </h3>
          <p class="text-purple-300 text-sm">{t("about.stats.thisyear")}</p>
        </div>
      </div>
    </div>

    <!-- what I bring to the table -->
    <div class="mt-16">
      <h3 class="text-2xl font-bold text-center mb-8">
        {t("about.bring.title")}
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div
          class="bg-purple-900/20 border border-purple-500/30 rounded-xl p-4 text-center hover:bg-purple-900/30 transition-colors"
        >
          <div class="flex justify-center mb-2">
            <img
              width="30"
              height="30"
              src="/src/assets/svg/fast.svg"
              alt="fast-icon"
            />
          </div>
          <p class="text-sm text-gray-300">{t("about.bring.performance")}</p>
        </div>
        <div
          class="bg-purple-900/20 border border-purple-500/30 rounded-xl p-4 text-center hover:bg-purple-900/30 transition-colors"
        >
          <div class="flex justify-center mb-2">
            <img
              width="28"
              height="28"
              src="/src/assets/svg/responsive.svg"
              alt="responsive-icon"
            />
          </div>
          <p class="text-sm text-gray-300">{t("about.bring.responsive")}</p>
        </div>
        <div
          class="bg-purple-900/20 border border-purple-500/30 rounded-xl p-4 text-center hover:bg-purple-900/30 transition-colors"
        >
          <div class="flex justify-center mb-2">
            <img
              width="28"
              height="28"
              src="/src/assets/svg/clean.svg"
              alt="clean-icon"
            />
          </div>
          <p class="text-sm text-gray-300">{t("about.bring.clean")}</p>
        </div>
        <div
          class="bg-purple-900/20 border border-purple-500/30 rounded-xl p-4 text-center hover:bg-purple-900/30 transition-colors"
        >
          <div class="flex justify-center mb-2">
            <img
              width="28"
              height="28"
              src="/src/assets/svg/lock.svg"
              alt="lock-icon"
            />
          </div>
          <p class="text-sm text-gray-300">{t("about.bring.secure")}</p>
        </div>
      </div>
    </div>
  </div>

  <style define:vars={{ shineText: `"${shineText}"` }}>
    .gradient-shine {
      position: relative;
      display: inline-block;
    }

    .gradient-shine::before {
      content: var(--shineText);
      position: absolute;
      top: 0;
      left: 0;
      background: linear-gradient(
        120deg,
        transparent 40%,
        rgba(255, 255, 255, 0.8) 50%,
        transparent 60%
      );
      background-size: 200% 100%;
      background-clip: text;
      -webkit-background-clip: text;
      color: transparent;
      -webkit-text-fill-color: transparent;
      animation: shine 3s linear infinite;
    }

    @keyframes shine {
      0% {
        background-position: 200% 0;
      }
      100% {
        background-position: -200% 0;
      }
    }

    .stat-card {
      background: linear-gradient(
        135deg,
        rgba(147, 51, 234, 0.1),
        rgba(236, 72, 153, 0.1)
      );
      backdrop-filter: blur(10px);
      border: 1px solid rgba(147, 51, 234, 0.3);
      transition: all 0.3s ease;
    }

    .stat-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(147, 51, 234, 0.3);
      border-color: rgba(147, 51, 234, 0.6);
    }

    .gradient-text {
      background: linear-gradient(to right, #a855f7, #ec4899);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    @keyframes float {
      0%,
      100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-10px);
      }
    }

    .float-animation {
      animation: float 3s ease-in-out infinite;
    }

    .code-line {
      opacity: 0;
      animation: fadeIn 0.5s forwards;
    }

    @keyframes fadeIn {
      to {
        opacity: 1;
      }
    }

    .caret {
      opacity: 0;
      animation: blink 1.2s infinite;
    }

    @keyframes blink {
      0%,
      100% {
        opacity: 0;
      }
      50% {
        opacity: 1;
      }
    }
  </style>
</section>
