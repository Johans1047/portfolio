---
interface Props {
    current?: 'home' | 'about' | 'portfolio' | 'contact';
}

const { current = 'home' } = Astro.props;
---

<header class="w-full h-15 fixed backdrop-blur-md bg-white/107 font-mono">
    <div class="mx-auto my-0 max-w-6xl h-full flex items-center justify-between">
        <h1 class="font-black text-2xl flex items-center justify-start">
            <a 
                class="hover:bg-linear-to-r hover:from-[#667eea] hover:to-[#764ba2] hover:bg-clip-text hover:text-transparent" 
                href="#home"
            >
                Johans1047
            </a>
        </h1>
        <ul class="flex items-center gap-9 px-1 py-2 font-medium text-purple-300">
            <li><a class="hover:outline-3 p-2" href="#home">Home</a></li>
            <li><a class="hover:outline-3 p-2" href="#about">About</a></li>
            <li><a class="hover:outline-3 p-2" href="#portfolio">Portfolio</a></li>
            <li><a class="hover:outline-3 p-2" href="#contact">Contact</a></li>
        </ul>
    </div>
</header>



