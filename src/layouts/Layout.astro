<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/svg/portfolio.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Portfolio</title>
  </head>
  <body
    class="text-purple-400"
  >
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100vh;
  }

  body::before {
    content: "";
    position: fixed;
    inset: 0;
    z-index: -1;
    background: linear-gradient(
      to bottom right,
      oklch(12.9% 0.042 264.695),
      oklch(28.2% 0.091 267.935),
      oklch(0 0 0)
    );
    background-size: cover;
    pointer-events: none;
  }
</style>
<script>
  const lang = new URL(window.location.href).pathname.split("/")[1] || "es";

  // Smooth scroll para todos los enlaces de ancla (header)
  document.querySelectorAll(`a[href^="/${lang}#"]`).forEach((anchor) => {
    anchor.addEventListener("click", function (e) {
      e.preventDefault();

      // Extraer solo el hash (parte despu√©s del #)
      const target = document.getElementById(
        this.getAttribute("href").split("#")[1]
      );

      target?.scrollIntoView({
        behavior: "smooth",
        block: "start",
      });
    });
  });
</script>
